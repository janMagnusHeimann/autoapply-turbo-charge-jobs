# Frontend Environment Variables
VITE_SUPABASE_URL=http://localhost:54321
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Application Configuration
VITE_APP_ENV=development
VITE_ENABLE_MOCK_DATA=true
VITE_API_BASE_URL=http://localhost:8000

# GitHub Integration (Optional)
VITE_GITHUB_CLIENT_ID=your_github_client_id_here
VITE_GITHUB_CLIENT_SECRET=your_github_client_secret_here

# OpenAI API (Optional but recommended for AI features)
VITE_OPENAI_API_KEY=sk-your_openai_api_key_here

# Google Scholar Integration (Optional)
VITE_GOOGLE_SCHOLAR_API_KEY=your_google_scholar_api_key_here

# Backend Environment Variables (for backend/.env)
# Copy these to backend/.env and fill in your values

# Supabase Configuration
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Application Configuration
ENVIRONMENT=development
DEBUG=true
API_PORT=8000

# AI Agent Configuration
AGENT_LOG_LEVEL=INFO
MEMORY_MAX_SIZE=1000
AGENT_RESPONSE_TIMEOUT=30

# External APIs
OPENAI_API_KEY=sk-your_openai_api_key_here
GITHUB_TOKEN=your_github_token_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GOOGLE_SCHOLAR_API_KEY=your_google_scholar_api_key_here

# Job Scraping Configuration
USER_AGENT=AutoApply-Bot/1.0
REQUEST_DELAY=1
MAX_RETRIES=3

# Security Configuration
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database Configuration (if using external database)
DATABASE_URL=postgresql://user:password@localhost:5432/autoapply

# Redis Configuration (for caching, optional)
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications, optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@autoapply.com

# Monitoring and Analytics (optional)
SENTRY_DSN=your_sentry_dsn_here
MIXPANEL_TOKEN=your_mixpanel_token_here

# File Storage (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60